<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    WIZARD IMPORTAR LIBROS - Tutorial 08

    Wizard con múltiples estados:
    1. Cargar archivo
    2. Vista previa
    3. Resultado
    -->

    <!-- Vista del Wizard -->
    <record id="view_wizard_importar_libros_form" model="ir.ui.view">
        <field name="name">biblioteca.wizard.importar.libros.form</field>
        <field name="model">biblioteca.wizard.importar.libros</field>
        <field name="arch" type="xml">
            <form string="Importar Libros">
                <group>
                    <group string="Archivo CSV" invisible="estado == 'resultado'">
                        <field name="archivo" filename="archivo_nombre"/>
                        <field name="archivo_nombre" invisible="1"/>
                        <field name="delimitador"/>
                        <field name="tiene_encabezado"/>
                        <field name="actualizar_existentes"/>
                    </group>

                    <group string="Formato del CSV" invisible="estado == 'resultado'">
                        <div class="alert alert-info" role="alert">
                            <strong>Columnas esperadas:</strong>
                            <ul class="mb-0">
                                <li><code>name</code> (requerido): Título del libro</li>
                                <li><code>isbn</code>: Código ISBN</li>
                                <li><code>autor</code>: Nombre del autor</li>
                                <li><code>editorial</code>: Editorial</li>
                                <li><code>paginas</code>: Número de páginas</li>
                                <li><code>precio</code>: Precio del libro</li>
                            </ul>
                        </div>
                    </group>
                </group>

                <!-- Vista Previa -->
                <group string="Vista Previa" invisible="estado != 'preview'">
                    <field name="preview" widget="text" readonly="1"/>
                </group>

                <!-- Resultado -->
                <group string="Resultado de la Importación" invisible="estado != 'resultado'">
                    <field name="resultado" widget="text" readonly="1"/>
                </group>

                <field name="estado" invisible="1"/>

                <footer>
                    <button string="Descargar Plantilla"
                            type="object"
                            name="action_descargar_plantilla"
                            class="btn-secondary"
                            invisible="estado == 'resultado'"/>
                    <button string="Importar"
                            type="object"
                            name="action_importar"
                            class="btn-primary"
                            invisible="estado == 'resultado'"/>
                    <button string="Cerrar"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard -->
    <record id="action_wizard_importar_libros" model="ir.actions.act_window">
        <field name="name">Importar Libros</field>
        <field name="res_model">biblioteca.wizard.importar.libros</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
